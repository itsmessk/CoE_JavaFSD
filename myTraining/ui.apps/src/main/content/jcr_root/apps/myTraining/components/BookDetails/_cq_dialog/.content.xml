<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                
                <items jcr:primaryType="nt:unstructured">
                    
                    <bookTitle jcr:primaryType="nt:unstructured"
                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                               fieldDescription="Enter the Book Title"
                               fieldLabel="Book Title"
                               name="./bookTitle"
                               required="{Boolean}true"/>
                    
                    <bookAuthor jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldDescription="Enter the Author Name"
                                fieldLabel="Author"
                                name="./bookAuthor"
                                required="{Boolean}true"/>
                    
                    <bookDescription jcr:primaryType="nt:unstructured"
                                     sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                     fieldDescription="Enter a short description of the book"
                                     fieldLabel="Description"
                                     name="./bookDescription"
                                     required="{Boolean}true"/>
                    
                    <coverImage jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldDescription="Select the book cover image"
                                fieldLabel="Cover Image"
                                name="./coverImage"/>
                    
                    <publicationDate jcr:primaryType="nt:unstructured"
                                     sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                     displayedFormat="DD MMMM, YYYY"
                                     fieldDescription="Select the book's publication date"
                                     fieldLabel="Publication Date"
                                     name="./publicationDate"
                                     storedValue="DD MMMM, YYYY"/>
                    
                </items>
            </column>
        </items>
    </content>
</jcr:root>